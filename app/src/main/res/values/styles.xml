<resources>
    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/navigation_back_color</item>
        <item name="colorPrimaryDark">@color/navigation_back_color</item>
        <item name="colorAccent">@color/navigation_back_color</item>
        <item name="android:title">@color/navButtons</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/backgroundColor</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@color/navButtons</item>
        <item name="android:textColorSecondary">@color/navButtons</item>
        <item name="android:textColor">@color/navButtons</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">25dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Input_Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor"> @color/textPrimaryDark</item>
        <item name="textAllCaps">false</item>

    </style>
    <style name="select_option" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor"> @color/textSecondry</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="Tab" parent="Widget.Design.TabLayout">

        <item name="tabTextAppearance">@style/tab_text</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColorPrimary">@color/navButtons</item>
        <item name="android:textColorSecondary">@color/navButtons</item>
        <item name="android:textColor">@color/navButtons</item>
       <!-- <item name="android:background">@color/backgroundColor</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColorPrimary">@color/navButtons</item>
        <item name="android:textColorSecondary">@color/navButtons</item>
        <item name="android:textColor">@color/navButtons</item>
    </style>
</resources>